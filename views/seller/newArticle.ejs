<!DOCTYPE html>
<html lang="en" dir="ltr">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">

    <link rel="stylesheet" href='/stylesheets/newArticleStyle.css'>

    <!-- Boxicons CDN Link -->
    <link href='https://unpkg.com/boxicons@2.1.1/css/boxicons.min.css' rel='stylesheet'>

    <title>
        <%= title %>
    </title>

</head>

<body>

    <form class="form" action="/trgovac/novi-artikal" method="post" id="form" enctype="multipart/form-data">

        <div class="container">

            <div class="article-info">

                <div class="mb-3">
                    <label for="f_article_name" class="form-label">Naziv artikla:</label>
                    <div class="form-input-button">
                        <input type="text" class="form-control" id="f_article_name" name="f_article_name" placeholder="Unesite naziv artikla" required>
                    </div>
                </div>

                <div class="price-quantity">

                    <div class="mb-3 price">
                        <label for="f_price" class="form-label">Cijena:</label>
                        <div class="form-input-button">
                            <input type="number" class="form-control" id="f_price" name="f_price" placeholder="Unesite cijenu" required>
                        </div>
                    </div>
                    <div class="mb-3 quantity">
                        <label for="f_quantity" class="form-label">Količina:</label>
                        <div class="form-input-button">
                            <input type="number" class="form-control" id="f_quantity" name="f_quantity" placeholder="Unesite količinu" required>
                        </div>
                    </div>

                </div>

                <div class="form-group">
                    <label for="s_description">Kratki opis:</label>
                    <textarea class="form-control" maxlength="200" name="f_s_description" id="s_description" rows="2" required></textarea>
                </div>
                <div class="form-group my-3">
                    <label for="l_description">Duži opis:</label>
                    <textarea class="form-control" name="f_l_description" id="l_description" rows="5" required></textarea>
                </div>


                <div class="form-group mb-3">
                    <label for="f_category">Izaberi kategorije:</label>
                    <select class="form-control selectpicker" name="f_category" id="f_category" multiple data-live-search="true" required>

                        <% categories.forEach((category)=>{%>
                            <option value="<%- category.category_id%> ">
                                <%= category.category_name %>
                            </option>
                            <% }) %>

                    </select>
                </div>

                <div class="mb-3">
                    <label for="f_keywords" class="form-label">Ključne riječi:</label>
                    <div class="form-input-button">
                        <input type="text" class="form-control" id="f_keywords" name="f_keywords" placeholder="Unesite ključne riječi artikla" required>
                    </div>
                </div>

                <div class="form-group mb-3">
                    <label for="f_article_condition">Stanje artikla:</label>
                    <select class="custom-select form-control" name="f_article_condition" id="f_article_condition" required>
                        <option value="1">novo</option>
                        <option value="2">polovno</option>
                        <option value="3">oštećeno</option>
                    </select>
                </div>


            </div>

            <div class="article-photos">

                <div class="mt-3 w-100">
                    <div class="card shadow-sm w-100">
                        <div class="card-header d-flex justify-content-between">
                            <h4>Dodaj fotografije artikla</h4>
                            <!--  <form class="form" action="/upload" method="post" id="form" enctype="multipart/form-data"> -->
                            <input type="file" name="image" id="image" class="d-none" accept="image/*" multiple onchange="image_select()">
                            <button class="btn btn-sm btn-primary" type="button" onclick="document.getElementById('image').click()">Dodaj</button>
                            <!-- <input type="submit"> -->
                            <!-- </form> -->
                        </div>
                        <div class="card-body d-flex flex-wrap justify-content-start" id="container">
                            <!-- Image will be show here-->
                        </div>
                    </div>
                </div>

            </div>

        </div>

        <input type="submit">
    </form>

    </form>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous"></script>
    <!--     <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM" crossorigin="anonymous"></script>-->
    <script src="/javascripts/newArticleScript.js"></script>
</body>

</html>



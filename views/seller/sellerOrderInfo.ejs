                                </th>
                                <td style="width: 13%">
                                    <%- orders[i].name %>
                                </td>
                                <td style="width: 10%">
                                    <%- orders[i].email %>
                                </td>
                                <td style="width: 5%">
                                    <%- orders[i].quantity %>
                                </td>
                                <td style="width: 20%">
                                    <%- orders[i].article_name %>
                                </td>
                                <td style="width: 7%">
                                    <%- orders[i].article_id %>
                                </td>
                                <td style="width: 10%">
                                    <%- orders[i].total %>
                                </td>
                                <td style="width: 20%">
                                    <select class="custom-select form-control" name="t_order_status" id="t_order_status_<%- orders[i].order_id %>">

                                        <% for(let j=0;j<status[i].length;j++) {%>
                                            <option value="<%= status[i][j] %>">
                                                <%= status[i][j] %>
                                            </option>
                                            <% } %>
                                    </select>
                                </td>
                                <td>
                                    <button type="button" onclick="order('<%- orders[i].order_id %>','<%- orders[i].article_id %>', '<%- orders[i].quantity %>')" class="btn btn-success">Update</button>
                                </td>
                            </tr>
                            <% } %>
                                <% } %>

<!DOCTYPE html>
<html lang="en" dir="ltr">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
    <link href="https://fonts.googleapis.com/css2?family=Rubik:wght@300;500&display=swap" rel="stylesheet">

    <link rel="stylesheet" href='/stylesheets/sidebarStyle.css'>

    <!-- Boxicons CDN Link -->
    <link href='https://unpkg.com/boxicons@2.0.7/css/boxicons.min.css' rel='stylesheet'>

    <title> Artikal </title>

    <style>

    </style>

    <script>
        const newRoute = (route) => {
            location.href = route;
        }
    </script>

</head>

<body>

    <!-- SIDEBAR -->
    <%- include('../include/admin__sidebar.ejs'); %>

        <!-- HOME SECTION -->
        <section class=" home-section ">

            <h2>Lista trgovaca</h2>
            <table class="table">
                <thead>
                    <tr>
                        <th>Trgovina</th>
                        <th>Vlasnik</th>
                    </tr>
                </thead>
                <tbody>

                    <% sellers.forEach((seller)=>{ %>
                        <tr>
                            <th>
                                <%- seller.store_name %>
                            </th>
                            <td>
                                <%- seller.owner %>
                            </td>
                            <td>
                                <input type="date" value="<%=seller.blocked%>" class="datePicker datePicker_<%=seller.seller_id%>" />
                            </td>
                            <td>
                                <button type="button" onclick="blocking('<%- seller.seller_id %>', 'seller')" class="btn btn-danger">Blokiraj</button>
                            </td>
                            <td>
                                <button type="button" onclick="archiving('<%- seller.seller_id %>', 'seller')" class="btn btn-warning">Arhiviraj</button>
                            </td>
                            <td>
                                <button type="button" onclick="removeRestrictions('<%- seller.seller_id %>', 'seller')" class="btn btn-success">Ukloni ograničenja</button>
                            </td>
                        </tr>
                        <% }) %>
                </tbody>
            </table>


            <h2>Lista kupaca</h2>
            <table class="table">
                <thead>
                    <tr>
                        <th>Kupac</th>

                    </tr>
                </thead>
                <tbody>

                    <% customers.forEach((customer)=>{ %>
                        <tr>
                            <th>
                                <%- customer.full_name %>
                            </th>
                            <td>
                                <input type="date" value="<%=customer.blocked%>" class="datePicker datePicker_<%=customer.customer_id%>" />
                            </td>
                            <td>
                                <button type="button" onclick="blocking('<%- customer.customer_id%>', 'customer')" class="btn btn-danger">Blokiraj</button>
                            </td>
                            <td>
                                <button type="button" onclick="archiving('<%- customer.customer_id %>', 'customer')" class="btn btn-warning">Arhiviraj</button>
                            </td>
                            <td>
                                <button type="button" onclick="removeRestrictions('<%- customer.customer_id %>', 'customer')" class="btn btn-success">Ukloni ograničenja</button>
                            </td>
                        </tr>
                        <% }) %>
                </tbody>
            </table>
            <br>
            <br>
            <br>

            <h2>Lista kategorija</h2>
            <table class="table newCategory">
                <thead>
                    <tr>
                        <th>Kategorija</th>
                    </tr>
                </thead>
                <tbody>

                    <% categories.forEach((category)=>{ %>
                        <tr class="category_row_<%=category.category_id%>">
                            <td>
                                <input type="text" value="<%=category.category_name%>" class="category_name category_name_<%=category.category_id%>" />
                            </td>
                            <td>
                                <button type="button" onclick="updateCategory('<%=category.category_id%>')" class="btn btn-success">Ažuriraj</button>
                            </td>
                            <td>
                                <button type="button" onclick="deleteCategory('<%=category.category_id%>')" class="btn btn-danger">Izbrisi</button>
                            </td>
                        </tr>
                        <% }) %>
                </tbody>
            </table>

            <br>
            <br>
            <br>

            <h2>Dodavanje nove kategorije</h2>
            <table class="table">
                <thead>
                    <tr>
                        <th>Nova kategorija</th>
                    </tr>
                </thead>
                <tbody>
                    <tr>
                        <td>
                            <input type="text" class="add_new_category" />
                        </td>
                        <td>
                            <button type="button" onclick="addCategory()" class="btn btn-success">Dodaj</button>
                        </td>
                    </tr>
                </tbody>
            </table>

        </section>

        <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
        <script src="/javascripts/admin__DashboardScript.js"></script>
</body>

</html>
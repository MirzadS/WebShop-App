<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Spremljeni artikli</title>
    <link href="https://fonts.googleapis.com/css2?family=Rubik:wght@300;500&display=swap" rel="stylesheet">
    <link rel="stylesheet" href='/stylesheets/articleListStyle.css'>
    <link rel="stylesheet" href='/stylesheets/sidebarStyle.css'>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
    <script src="https://cdnjs.cloudflare.com/ajax/libs/Chart.js/3.7.0/chart.min.js" integrity="sha512-TW5s0IT/IppJtu76UbysrBH9Hy/5X41OTAbQuffZFU6lQ1rdcLHzpU5BzVvr/YFykoiMYZVWlr/PX1mDcfM9Qg==" crossorigin="anonymous" referrerpolicy="no-referrer"></script>
    <!-- Boxicons CDN Link -->
    <link href='https://unpkg.com/boxicons@2.0.7/css/boxicons.min.css' rel='stylesheet'>
</head>

<body>


    <%- include('../include/customer__sidebar.ejs'); %>

        <section class="home-section">

            <div class="article-list ">

                <% items.forEach((item)=>{%>

                    <!-- onclick="newRoute('trgovac/artikal/<%#= item.article_id %>')" -->
                    <div class="single-item">
                        <div class="image-part">
                            <img src="/images/<%= item.image_path %>" alt="article image">
                        </div>

                        <div class="text-part ">
                            <div class="subname ">
                                <%= item.article_name %>
                            </div>
                            <div class="price ">
                                <%= item.price %> KM
                            </div>
                            <div class="description ">
                                <p>
                                    <%= item.s_description.substring(0, 100) %>...
                                </p>
                            </div>

                            <div class="article-btn">

                                <button onclick="newRoute('/kupac/artikal/<%= item.article_id %>')">Pregled
                                    artikla</button>
                            </div>
                        </div>
                    </div>

                    <% }) %>

            </div>


        </section>

        <script src="/javascripts/customerArticleListScript.js "></script>
        <!-- <script src="/javascripts/customer__SavedItemsScript.js "></script> -->
        <script>
        </script>
</body>

</html>
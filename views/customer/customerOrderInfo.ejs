<!DOCTYPE html>
<html lang="en" dir="ltr">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    <!-- <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous"> -->
    <link href="https://fonts.googleapis.com/css2?family=Rubik:wght@300;500&display=swap" rel="stylesheet">

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
    <link rel="stylesheet" href='/stylesheets/articleListStyle.css'>
    <link rel="stylesheet" href='/stylesheets/sellerOrderInfoStyle.css'>

    <!-- Boxicons CDN Link -->
    <link href='https://unpkg.com/boxicons@2.0.7/css/boxicons.min.css' rel='stylesheet'>

    <style>
        body {
            overflow-x: hidden;
        }
    </style>
    <title> Narudžbe </title>
</head>

<body>

    <!-- SIDEBAR -->
    <%- include('../include/customer__sidebar.ejs'); %>


        <!-- HOME SECTION -->
        <section class="home-section">

            <div class="row justify-content-center">
                <div class="col-lg-10">
                    <table class="table myTable">
                        <thead>
                            <tr>
                                <th>#</th>
                                <th>Trgovina</th>
                                <th>Email</th>
                                <th>Količina</th>
                                <th>Naziv artikla</th>
                                <th>Ukupna cijena</th>
                                <th>Status narudžbe</th>
                                <th></th>
                            </tr>
                        </thead>
                        <tbody>


                            <% if(orders !="" ) {%>

                                <!-- Moze i na drugi nacin npr. -->
                                <% for(let i=0;i<orders.length;i++) {%>

                                    <!-- <%# orders.forEach((order)=>{ %> -->
                                    <tr class="<%- orders[i].order_id %>">
                                        <th scope="row">
                                            <%- orders[i].order_id %>
                                        </th>
                                        <td>
                                            <%- orders[i].store_name %>
                                        </td>
                                        <td>
                                            <%- orders[i].email %>
                                        </td>
                                        <td>
                                            <%- orders[i].quantity %>
                                        </td>
                                        <td>
                                            <%- orders[i].article_name %>
                                        </td>
                                        <td>
                                            <%- orders[i].total %>
                                        </td>
                                        <td>
                                            <select class="custom-select form-control" name="t_order_status" id="t_order_status_<%- orders[i].order_id %>">

                                                <% for(let j=0;j<status[i].length;j++) {%>
                                                    <option value="<%= status[i][j] %>">
                                                        <%= status[i][j] %>
                                                    </option>
                                                    <% } %>
                                            </select>
                                        </td>
                                        <td>
                                            <button type="button" onclick="order('<%- orders[i].order_id %>')" class="btn btn-success">Update</button>
                                        </td>
                                    </tr>
                                    <% } %>
                                        <% } %>
                        </tbody>
                    </table>

                </div>

            </div>
        </section>

        <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous"></script>
        <script src="/javascripts/customerOrderInfoScript.js "></script>
        <script src="/javascripts/sidebarScript.js "></script>
</body>

</html>